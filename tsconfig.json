{
	"compilerOptions": {
		"declaration": true,
		"module": "CommonJS",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2020",
		"noImplicitAny": true,
		"sourceMap": true,
		"outDir": "dist",
		"allowJs": true,
		"baseUrl": "./src",
		"paths": {
			"anchor-bankrun": ["./"]
		},
		"resolveJsonModule": true,
		"skipLibCheck": true
	},
	"include": ["./src/**/*"]
}
